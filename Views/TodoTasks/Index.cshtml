@model IEnumerable<WhipApp.Models.TodoTask>

@{
    ViewData["Title"] = "List";
}

<div class="text-center">
    <h1 class="display-4">Task List</h1>
    <p><a href="https://en.wikipedia.org/wiki/Whip">Whips</a> used without painful stimulus, as an extension of the human hand or arm, are a visual command, or to tap an animal, or to exert pressure. </p>
    <p> </p>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DueDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Done)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id"><img src="https://img.icons8.com/wired/64/000000/tasklist.png" height="30"> @Html.DisplayFor(modelItem => item.Title)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DueDateTime)
                </td>
                <td>
                    @if(Html.DisplayTextFor(modelItem => item.Done)=="False")
                    {
                    <img src="https://img.icons8.com/pastel-glyph/64/000000/process.png" height="25">
                    }
                    else
                    {
                    <img src="https://img.icons8.com/cotton/64/000000/checkmark.png" height="30">
                    }
                </td>
                 <td>                     
                     <a asp-action="Edit" asp-route-id="@item.Id"><img src="https://img.icons8.com/pastel-glyph/64/000000/edit.png" height="20"></a> |                      
                     <a asp-action="Delete" asp-route-id="@item.Id"><img src="https://img.icons8.com/wired/64/000000/delete-forever.png" height="20"></a>
                 </td>
            </tr>
        }
    </tbody>
</table>
<p>
    <a asp-action="Create"><img src="https://img.icons8.com/pastel-glyph/64/000000/plus--v2.png" height="40"></a>
    Add Task
</p>

